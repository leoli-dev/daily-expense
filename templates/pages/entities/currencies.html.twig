{% set pageTitle = 'Currencies' %}
{% set sidebarActiveTag = 'currencies' %}

{% extends 'pages/layout.html.twig' %}

{% block pageContent %}
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Code</th>
                        <th>Symbol</th>
                        <th class="text-center">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for currency in currencies %}
                        <tr data-entity-id="{{ currency.id }}">
                            <td>{{ currency.name }}</td>
                            <td>{{ currency.code }}</td>
                            <td>{{ currency.symbol }}</td>
                            <td class="text-center">
                                <button class="btn btn-primary btn-icon-split btn-edit-model-toggle">
                                    <span class="icon text-white-50">
                                        <i class="fas fa-edit"></i>
                                    </span>
                                    <span class="text">Edit</span>
                                </button>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    {% embed 'components/_entity_modal.html.twig' %}
        {% block formFields %}
            <input type="hidden" name="id" value="">
            <div class="form-group row">
                <label for="inputName" class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-10">
                    <input type="text" name="name" class="form-control" id="inputName" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="inputCode" class="col-sm-2 col-form-label">Code</label>
                <div class="col-sm-10">
                    <input type="text" name="code" class="form-control" id="inputCode" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="inputSymbol" class="col-sm-2 col-form-label">Symbol</label>
                <div class="col-sm-10">
                    <input type="text" name="symbol" class="form-control" id="inputSymbol" required>
                </div>
            </div>
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {{ encore_entry_script_tags('pages/entities/currencies') }}
{% endblock %}
