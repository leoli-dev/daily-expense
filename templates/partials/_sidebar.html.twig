{% if sidebarActiveTag is not defined %}{% set sidebarActiveTag = 'dashboard' %}{% endif %}
{% if sidebarActiveTag == 'categories'
    or sidebarActiveTag == 'accounts'
    or sidebarActiveTag == 'owners'
    or sidebarActiveTag == 'currencies' %}
    {% set isBaseEntityPageActivated = true %}
{% else %}
    {% set isBaseEntityPageActivated = false %}
{% endif %}

<!-- Sidebar -->
<ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion {% if isSidebarToggled() %}toggled{% endif %}" id="accordionSidebar">

    <!-- Sidebar - Brand -->
    <a class="sidebar-brand d-flex align-items-center justify-content-center" href="{{ path('app_dashboard') }}">
        {% include 'partials/_logo.svg.twig' %}
        <div class="sidebar-brand-text mx-3" id="brandText">
            Daily<br>Expense
        </div>
    </a>

    <!-- Divider -->
    <hr class="sidebar-divider my-0">

    <!-- Nav Item - Dashboard -->
    <li class="nav-item {% if sidebarActiveTag == 'dashboard' %}active{% endif %}">
        <a class="nav-link" href="{{ path('app_dashboard') }}">
            <i class="fas fa-fw fa-tachometer-alt"></i>
            <span>Dashboard</span></a>
    </li>

    <!-- Divider -->
    <hr class="sidebar-divider">

    <!-- Nav Item - Records -->
    <li class="nav-item {% if sidebarActiveTag == 'records' %}active{% endif %}">
        <a class="nav-link" href="{{ path('app_records') }}">
            <i class="fas fa-fw fa-search-dollar"></i>
            <span>Records</span></a>
    </li>

    <!-- Divider -->
    <hr class="sidebar-divider">

    <!-- Nav Item - Pages Collapse Menu -->
    <li class="nav-item {% if isSidebarToggled() == false and isBaseEntityPageActivated %}active{% endif %}">
        <a class="nav-link  {% if isBaseEntityPageActivated == false %}collapsed{% endif %}" href="#" data-toggle="collapse" data-target="#collapseTwo"
           aria-expanded="true" aria-controls="collapseTwo">
            <i class="fas fa-fw fa-cog"></i>
            <span>Entities</span>
        </a>
        <div id="collapseTwo" class="collapse {% if isSidebarToggled() == false and isBaseEntityPageActivated %}show{% endif %}" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
            <div class="bg-white py-2 collapse-inner rounded">
                <a class="collapse-item {% if sidebarActiveTag == 'accounts' %}active{% endif %}"
                   href="{{ path('app_entity_accounts') }}">
                    Accounts
                </a>
                <a class="collapse-item {% if sidebarActiveTag == 'categories' %}active{% endif %}"
                   href="{{ path('app_entity_categories') }}">
                    Categories
                </a>
                <a class="collapse-item {% if sidebarActiveTag == 'currencies' %}active{% endif %}"
                   href="{{ path('app_entity_currencies') }}">
                    Currencies
                </a>
                <a class="collapse-item {% if sidebarActiveTag == 'owners' %}active{% endif %}"
                   href="{{ path('app_entity_owners') }}">
                    Owners
                </a>
            </div>
        </div>
    </li>

    <!-- Divider -->
    <hr class="sidebar-divider d-none d-md-block">

    <!-- Sidebar Toggler (Sidebar) -->
    <div class="text-center d-none d-md-inline">
        <button class="rounded-circle border-0" id="sidebarToggle"></button>
    </div>

</ul>
<!-- End of Sidebar -->
